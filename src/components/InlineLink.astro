---
interface Props {
  text: string;
  url: string;
  target?: string;
}

const { text, url, target } = Astro.props;
---

<a
  href={url}
  target={target ?? "_self"}
  class="group underline outline-none hover:bg-l/primary hover:text-l/primary hover:after:text-l/primary focus-visible:bg-l/primary focus-visible:text-l/primary focus-visible:after:text-l/primary dark:hover:bg-d/primary dark:hover:text-d/primary dark:hover:after:text-d/primary dark:focus-visible:bg-d/primary dark:focus-visible:text-d/primary dark:focus-visible:after:text-d/primary"
  ><span
    class="text-l/secondary group-hover:text-d/primary group-focus-visible:text-d/primary dark:text-d/secondary dark:group-hover:text-l/primary dark:group-focus-visible:text-l/primary"
    >{text}</span
  ></a
>
